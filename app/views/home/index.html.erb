<div data-controller="cart" class="p-8">
  <div id="root"></div>

  <%= render 'home/modal_products' %>
  <br />
  <h1>Ventas</h1>
  <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase dark:text-gray-400">
        <tr>
          <th scope="col" class="py-3 px-6 bg-gray-50 dark:bg-gray-800">
            Product name
          </th>
          <th scope="col" class="py-3 px-6">Precio</th>
          <th scope="col" class="py-3 px-6 bg-gray-50 dark:bg-gray-800">
            Cantidad
          </th>
          <th scope="col" class="py-3 px-6">SubTotal</th>
        </tr>
      </thead>
      <tbody data-cart-target="show_products">
        <tr class="border-b border-gray-200 dark:border-gray-700">
          <th
            scope="row"
            class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap bg-gray-50 dark:text-white dark:bg-gray-800"
          ></th>
          <td class="py-4 px-6"></td>
          <td class="py-4 px-6 bg-gray-50 dark:bg-gray-800"></td>
          <td class="py-4 px-6"></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
